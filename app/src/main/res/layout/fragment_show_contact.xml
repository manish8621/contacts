<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/primary_bg">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_floating_fluid_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="75dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/photo_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/name_tv"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="Manish" />


        <ImageView
            android:id="@+id/fav_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/star_empty"
            app:layout_constraintBottom_toBottomOf="@+id/name_tv"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/name_tv"
            app:layout_constraintTop_toTopOf="@+id/name_tv" />

        <TextView
            android:id="@+id/number1_tv"
            style="@style/valueTextFaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/name_tv"
            tools:text="6382556505" />

        <ImageView
            android:id="@+id/number1_call_iv"
            style="@style/valueTextFaded"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/small_btn_bg"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_phone_24"
            app:layout_constraintBottom_toBottomOf="@+id/number1_tv"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/number1_tv"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/number2_tv"
            style="@style/valueTextFaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/number1_tv"
            tools:text="6382556505" />

        <ImageView
            android:id="@+id/number2_call_iv"
            style="@style/valueTextFaded"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/small_btn_bg"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_phone_24"
            app:layout_constraintBottom_toBottomOf="@+id/number2_tv"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/number2_tv"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/number3_tv"
            style="@style/valueTextFaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/number2_tv"
            tools:text="6382556505" />

        <ImageView
            android:id="@+id/number3_call_iv"
            style="@style/valueTextFaded"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/small_btn_bg"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_phone_24"
            app:layout_constraintBottom_toBottomOf="@+id/number3_tv"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/number3_tv"
            app:tint="@color/white"/>


        <ImageView
            android:id="@+id/dob_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:src="@drawable/cake_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number3_tv"
            app:tint="@color/on_primary" />


        <TextView
            android:id="@+id/dob_tv"
            style="@style/valueTextFadedSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/dob_iv"
            app:layout_constraintStart_toStartOf="@+id/dob_iv"
            app:layout_constraintTop_toBottomOf="@+id/dob_iv"
            tools:text="00/00/0000" />


        <ImageView
            android:id="@+id/mail_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:src="@drawable/email_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dob_tv"
            app:tint="@color/on_primary" />

        <TextView
            android:id="@+id/mail_tv"
            style="@style/valueTextFadedSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/mail_iv"
            app:layout_constraintStart_toStartOf="@+id/mail_iv"
            app:layout_constraintTop_toBottomOf="@+id/mail_iv"
            tools:text="manimayil862@gmail.com" />

        <TextView
            android:id="@+id/group_tv"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/groups_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/groups_rv"
            android:text="@string/groups" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groups_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/group_tv"
            app:layout_constraintTop_toBottomOf="@+id/mail_tv" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/number1_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="number1_call_iv,number1_tv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/number2_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="number2_call_iv,number2_tv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/number3_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="number3_call_iv,number3_tv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/mail_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="mail_iv,mail_tv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/dob_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="dob_iv,dob_tv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/contact_groups_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="group_tv,groups_rv"
            tools:layout_editor_absoluteX="16dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/edit"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#009688" />

        <ImageView
            android:id="@+id/del_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_btn"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>