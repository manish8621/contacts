<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleTextLev1">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="titleText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="titleTextSmall">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="valueText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="valueTextFaded" parent="valueText">
        <item name="android:textColor">@color/on_primary_faded</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="valueTextFadedSmall" parent="valueTextFaded">
        <item name="android:textSize">12sp</item>

    </style>
    <style name="valueTextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
</resources>